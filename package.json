{
  "name": "ts-express-microservice-boilerplate",
  "description": "Example",
  "version": "0.1.1",
  "private": true,
  "author": "zautumnz",
  "license": "LGPL-3.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "coveralls": "if [ -n \"$COVERALLS_REPO_TOKEN\" ]; then coveralls < coverage/lcov.info; fi || true | node -e ''",
    "dev": "nodemon",
    "format": "prettier \"src/**/*.ts\" --write",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "start": "./scripts/start.sh",
    "test": "run-s -s test:ts test:lint test:jest",
    "test:build": "run-s test:ts test:lint cover coveralls",
    "test:jest": "NODE_ENV=test jest",
    "test:lint": "eslint -c .eslintrc.json src/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zautumnz/ts-express-microservice-boilerplate.git"
  },
  "keywords": [
    "docker",
    "jenkins",
    "microservice",
    "typescript"
  ],
  "dependencies": {
    "body-parser": "1.19.0",
    "boring-cluster": "6.0.9",
    "cookie-parser": "1.4.5",
    "dnscache": "1.0.2",
    "express": "4.17.1",
    "helmet": "4.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.9",
    "@types/helmet": "4.0.0",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.19",
    "@types/supertest": "2.0.10",
    "coveralls": "3.1.0",
    "eslint": "7.17.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "sortpack": "2.1.11",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "resetMocks": true,
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules|lib)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
